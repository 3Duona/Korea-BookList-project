@page
@model BookList.Pages.Library.BookDetailsModel

@{
    ViewData["Title"] = "Detailed view";
}

<h1>Info on @Html.DisplayFor(model => model.Book.Title)</h1>

<div>
    <hr />
    <dl class="row">
        <div class="col-md-4 text-right">
            <img class="img" src=@Html.DisplayFor(model => model.Book.Url) alt="Photo">
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.ReleaseDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.ReleaseDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.Score)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.Score)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.Url)
                </dt>
                <dd class="col-sm-10">
                    <a href="@Html.DisplayFor(model => model.Book.Url)" onclick="window.open(@Html.DisplayFor(model => model.Book.Url))">@Html.DisplayFor(model => model.Book.UrlTrimmed)</a>
                </dd>
            </dl>
        </div>
    </dl>
</div>
<div>
    <a asp-page="./BookEdit" asp-route-id="@Model.Book.BookId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
